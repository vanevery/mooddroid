<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal">
     
<TextView android:id="@+id/mood_text_value"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:textColor="@color/white" android:textSize="21sp" android:paddingBottom="5sp" android:paddingTop="5sp" android:layout_width="fill_parent" android:paddingLeft="5dip" android:paddingRight="15dip"/>
    
<TextView android:id="@+id/mood_text"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" android:textColor="@color/white" android:textSize="25sp" android:paddingBottom="5sp" android:paddingTop="5sp"/>

    
    
 </LinearLayout>